<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:background="@drawable/back_iv"
        android:layout_marginRight="8dp"
        android:id="@+id/iv_music_notification"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <LinearLayout
        android:layout_marginLeft="2dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@android:style/TextAppearance.StatusBar.EventContent.Title"
            android:textColor="@color/Gray"
            android:layout_marginBottom="6dp"
            android:singleLine="true"
            android:id="@+id/tv_music_song_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌曲" />

        <TextView
            style="@android:style/TextAppearance.StatusBar.EventContent"
            android:textColor="@color/Gray"
            android:singleLine="true"
            android:id="@+id/tv_music_singer_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌手" />

    </LinearLayout>

    <ImageButton

        android:layout_marginLeft="2dp"
        android:background="@drawable/music_stop"
        android:id="@+id/ib_music_playStop_notification"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <ImageButton
        android:layout_marginLeft="10dp"
        android:background="@drawable/music_play_next"
        android:id="@+id/ib_music_next_notification"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <ImageButton
        android:layout_marginLeft="10dp"
        android:background="@drawable/music_stop_noti"
        android:id="@+id/ib_music_stop_notification"
        android:layout_width="26dp"
        android:layout_height="26dp" />



</LinearLayout>